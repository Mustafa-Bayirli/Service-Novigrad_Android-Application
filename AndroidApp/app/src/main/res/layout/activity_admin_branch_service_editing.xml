<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adminServiceTextViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Service to Edit"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/adminServiceBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminServiceTextViewTop"
        android:layout_toRightOf="@id/adminNewServiceButton"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:text="Back" />

    <Button
        android:id="@+id/adminNewServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminServiceTextViewTop"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="40dp"
        android:layout_weight="1"
        android:text="Create New Service" />

    <TextView
        android:id="@+id/adminServiceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminServiceBackButton"
        android:text="Services"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <ListView
        android:id="@+id/listViewService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminServiceTextView"></ListView>

</RelativeLayout>