<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adminBranchTextViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Branch to Edit"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/adminBranchBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminBranchTextViewTop"
        android:layout_toRightOf="@id/adminNewBranchButton"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:text="Back" />

    <Button
        android:id="@+id/adminNewBranchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminBranchTextViewTop"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="40dp"
        android:layout_weight="1"
        android:text="Create New Branch" />

    <TextView
        android:id="@+id/adminBranchTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminBranchBackButton"
        android:text="Branches"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <ListView
        android:id="@+id/listViewBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminBranchTextView"></ListView>

</RelativeLayout>