<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ServiceIDNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Service ID"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/ServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Service Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/ServiceQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ServicePOU"
        android:gravity="center_horizontal"
        android:hint="Other Data Needed\n(Question to be Answered)\nLeave Empty For None"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <CheckBox
        android:id="@+id/ServicePOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ServiceName"
        android:gravity="center_horizontal"
        android:hint="Needs Proof Of Residence"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <CheckBox
        android:id="@+id/ServicePOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ServicePOR"
        android:gravity="center_horizontal"
        android:hint="Needs Proof Of Status"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <CheckBox
        android:id="@+id/ServicePOU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ServicePOS"
        android:gravity="center_horizontal"
        android:hint="Needs Photo Of Customer"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ServicebuttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Close" />

        <Button
            android:id="@+id/ServicebuttonCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create New" />

    </LinearLayout>


</LinearLayout>